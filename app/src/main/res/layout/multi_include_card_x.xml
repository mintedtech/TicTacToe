<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_x"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/outside_margin"
    app:cardBackgroundColor="@color/colorBoardBackground"
    tools:showIn="@layout/main_include_all_items">

    <androidx.cardview.widget.CardView
        app:cardElevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/outside_half_margin"
        tools:showIn="@layout/main_include_all_items">

        <ImageView
            android:id="@+id/imageX"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/current_turn_X"
            android:src="@drawable/ic_x"
            android:tint="@color/color_dark_green" />

    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>