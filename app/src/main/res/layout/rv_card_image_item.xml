<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.cardview.CircularRevealCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/outside_half_margin"
    app:cardBackgroundColor="@color/backgroundDefaultColor">

    <ImageView
        android:id="@+id/rv_image_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/board_space"
        android:scaleType="fitCenter"
        tools:src="@drawable/ic_xo_light" />
</com.google.android.material.circularreveal.cardview.CircularRevealCardView>