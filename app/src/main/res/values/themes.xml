<resources>
    <!-- Base application theme. -->
    <style name="Theme.TicTacToe" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:alertDialogTheme">@style/MaterialAlertDialogStyle</item>
        <item name="alertDialogTheme">@style/MaterialAlertDialogStyle</item>

        <item name="android:textColorPrimary">@color/colorPrimaryText</item>
        <item name="android:textColorSecondary">@color/colorSecondaryText</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorPrimaryText</item>

        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryDark</item>
        <item name="colorOnSecondary">@color/colorSecondaryText</item>

        <item name="colorButtonNormal">@color/colorPrimaryLight</item>
        <item name="colorControlActivated">@color/colorSecondary</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>

        <item name="android:navigationBarColor">@color/colorSecondaryDark</item>
        <item name="android:statusBarColor">@color/colorSecondaryDark</item>

        <item name="actionBarTheme">@style/Theme.TicTacToe.AppBarOverlay</item>
        <item name="popupTheme">@style/Theme.TicTacToe.PopupOverlay</item>
    </style>

    <style name="Theme.TicTacToe.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="MaterialAlertDialogStyle" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorAccent">@color/colorSecondary</item>
    </style>

    <style name="Theme.TicTacToe.NoActionBar.SplashScreenTheme">
        <item name="android:background">@drawable/splash_background</item>
    </style>

    <style name="Theme.TicTacToe.NoActionBar.Dialog" parent="Theme.MaterialComponents.DayNight.Dialog.MinWidth">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorPrimaryText</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryDark</item>
        <item name="colorOnSecondary">@color/colorSecondaryText</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="android:navigationBarColor">@color/colorSecondaryDark</item>
        <item name="android:statusBarColor">@color/colorSecondaryDark</item>
    </style>

    <style name="Theme.TicTacToe.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="Theme.TicTacToe.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
</resources>
