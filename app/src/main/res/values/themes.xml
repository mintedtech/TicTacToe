<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.TicTacToe" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColorPrimary">@color/colorPrimaryText</item>
        <item name="android:textColorSecondary">@color/colorSecondaryText</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorButtonNormal">@color/colorPrimaryLight</item>

        <item name="actionBarTheme">@style/Theme.TicTacToe.AppBarOverlay</item>
        <item name="popupTheme">@style/Theme.TicTacToe.PopupOverlay</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondaryVariant</item>
        <item name="android:navigationBarColor" tools:targetApi="l">?attr/colorSecondaryVariant
        </item>
    </style>

    <style name="Theme.TicTacToe.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Theme.TicTacToe.NoActionBar.SplashScreenTheme">
        <item name="android:background">@drawable/splash_background</item>
    </style>

    <style name="Theme.TicTacToe.NoActionBar.Dialog"
        parent="Theme.MaterialComponents.DayNight.Dialog.MinWidth">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorPrimaryText</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item
            name="colorSecondaryVariant">@color/colorSecondaryDark</item>
        <item name="colorOnSecondary">@color/colorSecondaryText</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="android:navigationBarColor"
            tools:targetApi="lollipop">@color/colorSecondaryDark
        </item>
        <item name="android:statusBarColor"
            tools:targetApi="lollipop">@color/colorSecondaryDark
        </item>
    </style>

    <style name="Theme.TicTacToe.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="Theme.TicTacToe.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
</resources>
