<resources>
    <!-- Base application theme. -->
    <style name="Theme.TicTacToe" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:alertDialogTheme">@style/MaterialAlertDialogStyle</item>
        <item name="alertDialogTheme">@style/MaterialAlertDialogStyle</item>

        <item name="android:textColorPrimary">@color/primaryOnColor</item>
        <item name="android:textColorSecondary">@color/secondaryOnColor</item>

        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryOnColor</item>

        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryOnColor</item>

        <item name="colorButtonNormal">@color/primaryLightColor</item>
        <item name="colorControlActivated">@color/secondaryColor</item>
        <item name="colorControlHighlight">@color/primaryDarkColor</item>

        <item name="android:navigationBarColor">@color/secondaryDarkColor</item>
        <item name="android:statusBarColor">@color/secondaryDarkColor</item>

        <item name="actionBarTheme">@style/Theme.TicTacToe.AppBarOverlay</item>
        <item name="popupTheme">@style/Theme.TicTacToe.PopupOverlay</item>
    </style>

    <style name="Theme.TicTacToe.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="MaterialAlertDialogStyle" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorAccent">@color/secondaryColor</item>
    </style>

    <style name="Theme.TicTacToe.NoActionBar.SplashScreenTheme">
        <item name="android:background">@drawable/splash_background</item>
    </style>

    <style name="Theme.TicTacToe.NoActionBar.Dialog" parent="Theme.MaterialComponents.DayNight.Dialog.MinWidth">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryOnColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryOnColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="android:navigationBarColor">@color/secondaryDarkColor</item>
        <item name="android:statusBarColor">@color/secondaryDarkColor</item>
    </style>

    <style name="Theme.TicTacToe.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="Theme.TicTacToe.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
</resources>
