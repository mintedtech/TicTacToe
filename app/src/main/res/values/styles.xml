<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Image_x_o">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
    </style>

    <style name="MaterialCardWithBorder" parent="Widget.Material3.CardView.Outlined">
        <item name="strokeWidth">@dimen/slim_margin</item>
        <item name="strokeColor">@color/backgroundColoredColor</item>
    </style>

    <style name="TextViewStatistics">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="android:textAppearance">
            @style/TextAppearance.MaterialComponents.Subtitle1
        </item>
    </style>

    <style name="TextViewStatistics.PrimaryTextColor">
        <item name="android:textColor">@color/primaryTextColoredColor</item>
    </style>

    <style name="TextViewStatistics.PrimaryTextColor.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewStatistics.SecondaryTextColor">
        <item name="android:textColor">@color/secondaryTextColoredColor</item>
    </style>

    <style name="TextViewStatistics.SecondaryTextColor.Bold">
        <item name="android:textStyle">bold</item>
    </style>

</resources>