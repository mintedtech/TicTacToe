<resources>
    <style name="MaterialCardWithBorder" parent="Widget.MaterialComponents.CardView">
        <item name="strokeWidth">@dimen/slim_margin</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="cardBackgroundColor">@color/colorDefaultBackground</item>
    </style>

    <style name="TextViewStatistics">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="android:textAppearance">
            @style/TextAppearance.MaterialComponents.Subtitle1</item>
    </style>

    <style name="TextViewStatistics.PrimaryTextColor">
        <item name="android:textColor">@color/colorPrimaryTextColored</item>
    </style>

    <style name="TextViewStatistics.PrimaryTextColor.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewStatistics.SecondaryTextColor">
        <item name="android:textColor">@color/colorSecondaryTextColored</item>
    </style>

    <style name="TextViewStatistics.SecondaryTextColor.Bold">
        <item name="android:textStyle">bold</item>
    </style>

</resources>
