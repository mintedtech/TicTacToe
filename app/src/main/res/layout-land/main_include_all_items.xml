<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/multi_include_card_x"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="@dimen/outside_margin"
        app:layout_constraintBottom_toTopOf="@+id/bottom_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        layout="@layout/main_include_rv_board"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/outside_margin"
        app:layout_constraintBottom_toTopOf="@+id/bottom_bar"
        app:layout_constraintEnd_toStartOf="@+id/card_o"
        app:layout_constraintStart_toEndOf="@+id/card_x"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        layout="@layout/multi_include_card_o"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="@dimen/outside_margin"
        app:layout_constraintBottom_toTopOf="@+id/bottom_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <include layout="@layout/main_include_bottom_bar" />
</androidx.constraintlayout.widget.ConstraintLayout>